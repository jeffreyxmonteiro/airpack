<div class="home-container">
  <div class="home-background">
    <div class="name-and-logo">
      <span id="app-name">airPack <%= image_tag('logo.png') %></span>
    </div>
    <div class="home-links-container">
      <span class="home-link"><%= link_to "Become a Packer", new_packer_registration_path %></span>
      <span class="home-link"><%= link_to "Traveler Signup", new_traveler_registration_path %></span>
      <span class="home-link"><%= link_to "Packer Login", new_packer_session_path %></span>
      <span class="home-link"><%= link_to "Traveler Login", new_traveler_session_path %></span>
    </div>
  </div>
  <div class="bottom-half">
    <div class="pack-model-cards">
      <div class="fadein">
        <p id="main-image"><%= image_tag 'home-card.png', id: 'f1' %></p>
        <p id="main-image"><%= image_tag 'model.png', id: 'f2' %></p>
        <p id="main-image"><%= image_tag 'pack1.jpg', id: 'f3' %></p>
        <p id="main-image"><%= image_tag 'model1.jpg', id: 'f4' %></p>
        <p id="main-image"><%= image_tag 'pack2.jpg', id: 'f5' %></p>
       <!--  <p id="main-image"><%#= image_tag 'model2.jpg', id: 'f6' %></p> -->
      </div>
    </div>
    <div class="home-content">
      <div class="main-description">
        <h1>Rent travel essentials packed</h1>
        <h1>and delivered by locals</h1>
      </div>
      <div class="homepage-content">
        <h2>1. Select destination and trip duration</h2>
        <h2>2. Choose size and style</h2>
        <h2>3. Book the perfect pack</h2>
      </div>
      <div class="discoverbutton">
        <%= link_to "DISCOVER PACKS", packs_path, class: "packs-btn btn-lg" %>
      </div>
    </div>
  </div>
</div>
