<div class="login-background">
  <div class="log-in-form-container">
    <h2>Log In</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-links">
        <%= render "travelers/shared/links" %>
      </div>

      <div class="form-actions log-in-btn">
        <%= f.button :submit, "LOGIN" %>
      </div>
    <% end %>
  </div>
  <div class="log-in-image" style="background-image: linear-gradient(rgba(239, 94, 32, 0.05), rgba(13, 173, 169, 0.2)), url('<%= image_path 'login.jpg' %>')">
  </div>
</div>
