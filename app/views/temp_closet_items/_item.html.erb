<% if tempcloset.include? item %>
  <div class="col-xs-12 col-sm-6 col-md-4" id="item-<%= item.id %>">
    <div class="pack-item-card" style="filter: grayscale(100%) brightness(50%);">
      <div class="pack-image" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= item.photo_url %>);"></div>
      <div class="pack-description">
        <div><h6><%= item.style %></h6></div>
        <div class="pack-name"><h2><%= item.name %></h2></div>
        <div class="pack-size"><h6><%= item.size %></h6></div>
      </div>
      <div class="description-and-price">
        <div class="inner-pack-description">
          <h6><%= item.description %></h6>
        </div>
        <div class="pack-price">
        <h6>¥<%= item.price %></h6>
        </div>
      </div>
       <%= link_to "", temp_closet_item_path(item), method: :delete, class: "card-link", remote: true %>
    </div>
  </div>
<% else %>
  <div class="col-xs-12 col-sm-6 col-md-4" id="item-<%= item.id %>">
    <div class="pack-item-card">
      <div class="pack-image" style="background-image: linear-gradient(rgba(0,0,0,0.1), rgba(0,0,0,0.1)), url(<%= item.photo_url %>);"></div>
      <div class="pack-description">
        <div><h6><%= item.style %></h6></div>
        <div class="pack-name"><h2><%= item.name %></h2></div>
        <div class="pack-size"><h6><%= item.size %></h6></div>
      </div>
      <div class="description-and-price">
        <div class="inner-pack-description">
          <h6><%= item.description %></h6>
        </div>
        <div class="pack-price">
        <h6>¥<%= item.price %></h6>
        </div>
      </div>
       <%= link_to "", temp_closet_items_path(item: item), method: :post, class: "card-link", remote: true %>
    </div>
  </div>
<% end %>
