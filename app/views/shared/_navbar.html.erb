      <%#= link_to "Messages", "#", class: "navbar-wagon-item navbar-wagon-link" %>

      <div class="navbar-wagon-item navbar-airpack-link">
          <a href="#">Bookings</a>
      </div>
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag 'cart-icon.png', class: "avatar dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
