<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png", height: 50 %>
  <% end %>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm flex">
    <div class="search">
      <form class="form-inline left-form" action="/action_page.php">
        <div class="form-group">
          <input type="text" class="form-control" id="text" placeholder="Location">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" id="text" placeholder="Delivery Date">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" id="text" placeholder="Trip Duration">
        </div>
        <div class="form-group">
          <input type="text" class="form-control" id="text" placeholder="Style">
        </div>
      </form>
    </div>

    <div class="find-btn">
      <%= link_to "FIND PACKS", packs_path %>
    </div>

    <% if traveler_signed_in? %>

      <!-- Links when logged in -->
      <%#= link_to "Host", "#", class: "navbar-wagon-item navbar-wagon-link" %>
      <%#= link_to "Trips", "#", class: "navbar-wagon-item navbar-wagon-link" %>
      <%#= link_to "Messages", "#", class: "navbar-wagon-item navbar-wagon-link" %>

      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag 'cart-icon.png', class: "icon dropdown-toggle", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <%= render "shared/cart_icon" %>
<!--           <i class="fas fa-cart-arrow-down dropdown-toggle" id="navbar-wagon-menu"></i>
-->        <div class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu" id="cart_dropdown">
            <%= render "shared/cart_dropdown" %>
          </div>
        </div>
      </div>

      <!-- Avatar with dropdown menu -->
      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag current_traveler.photo_url, class: "avatar dropdown-toggle center", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to profile_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_traveler_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% elsif packer_signed_in? %>

      <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= link_to closet_profile_path do %>
            <%= image_tag 'closet-icon.png', class: "icon dropdown-toggle" %>
          <% end %>
        </div>
      </div>

      <!-- Avatar with dropdown menu -->
    <div class="navbar-wagon-item">
        <div class="dropdown">
          <%= image_tag current_packer.photo_url, class: "avatar dropdown-toggle center", id: "navbar-wagon-menu", "data-toggle" => "dropdown" %>
          <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
            <li>
              <%= link_to profile_path do %>
                <i class="fa fa-user"></i> <%= t(".profile", default: "Profile") %>
              <% end %>
            </li>
            <li>
              <%= link_to destroy_packer_session_path, method: :delete do %>
                <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>

    <% else %>
      <!-- Login link (when logged out) -->
      <%= link_to t(".sign_in", default: "Login"), new_traveler_session_path, class: "navbar-wagon-item navbar-wagon-link" %>
    <% end %>
  </div>

  <!-- Dropdown list appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><a href="#">Some mobile link</a></li>
        <li><a href="#">Other one</a></li>
        <li><a href="#">Other one</a></li>
      </ul>
    </div>
  </div>
</div>

