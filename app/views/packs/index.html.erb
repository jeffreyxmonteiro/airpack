<div class="page-wrapper">
  <div class="index-page-description text-center" style="background-image: linear-gradient(rgba(0,0,0,0.45), rgba(0,0,0,0.45)), url('<%= image_path 'indexbanner.jpg' %>')">
    <h3>Travel Essentials</h3>
  </div>

<!-- tab headings -->
  <div class="index-page-tabs">
      <ul class="nav nav-tabs" role="tablist">

        <li role="presentation" class="active">
          <a href="#packs-tab" aria-controls="packs" role="tab" data-toggle="tab" aria-controls="packs-tab" aria-selected="true">Available Packs</a>
        </li>

        <li role="presentation">
          <a href="#items-tab" aria-controls="items" role="tab" data-toggle="tab" aria-controls="items-tab" aria-selected="false">Available Items</a>
        </li>
      </ul>
  </div>
<!-- tab headings^^^^^^^ -->

<!-- tab content container -->

  <div class="tab-content">

    <div role="tabpanel" class="tab-pane fade active in" id="packs-tab" aria-labelledby="packs-tab">

        <div class="packs-container">
          <div class="pack-msg"><%= @pack_message %></div>
          <div class="pack-row">
            <% @filtered_packs.sort.reverse.first(18).each do |pack| %>
           <div class="col-xs-12 col-md-6 col-lg-4">
                <div class="pack-card">
                  <div class="pack-image" style="background-image: url('<%= cl_image_path pack.photo, height: 300, width: 400, crop: :fill %>');"></div>
                  <div class="pack-description">
                    <div>
                      <h6><%= pack.style %> · Tops: <%= pack.top_count %>, Bottoms: <%= pack.bottom_count %>, Misc: <%= pack.misc_count %></h6>
                    </div>
                    <div class="pack-name"><h2><%= pack.name %></h2></div>
                    <div class="pack-size"><h6><%= pack.size %></h6></div>
                  </div>
                  <div class="description-and-price">
                    <div class="inner-pack-description">
                      <h6><%= pack.description %></h6>
                    </div>
                    <div class="pack-price">
                      <h6>¥<%= number_with_delimiter(pack.price, :delimiter => ',') %></h6>
                    </div>
                  </div>
                   <%= link_to "", pack_path(pack), class: "card-link" %>
                   <div class="packer-avatar" style="background-image: url(<%= pack.packer.photo_url %>);">
                      <p class="packer-name"><%= pack.packer.first_name %></p>
                   </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>

    </div>
<!-- packs tab content^^^ above this div  -->

    <div role="tabpanel" class="tab-pane fade" id="items-tab" aria-labelledby="items-tab">

        <div class="packs-container">
          <div class="pack-row">
            <% @filtered_items.sort.reverse.first(18).each do |item| %>
           <div class="col-xs-12 col-md-6 col-lg-4">
                <div class="pack-card">
                  <div class="pack-image" style="background-image: url(<%= item.photo %>);"></div>
                  <div class="pack-description">
                    <div>
                      <h6><%= item.style %>
                    </div>
                    <div class="pack-name"><h2><%= item.name %></h2></div>
                    <div class="pack-size"><h6><%= item.size %></h6></div>
                  </div>
                  <div class="description-and-price">
                    <div class="inner-pack-description">
                      <h6><%= item.description %></h6>
                    </div>
                    <div class="pack-price">
                      <h6>¥<%= number_with_delimiter(item.price, :delimiter => ',') %></h6>
                    </div>
                  </div>
                   <%= link_to "", cart_items_path(cartable_type: item.class, cartable_id: item.id), method: :post, class: "card-link" %>
                   <div class="packer-avatar" style="background-image: url('<%= cl_image_path item.packer.photo_url, height: 300, width: 400, crop: :fill %>');">
                    <p class="packer-name"><%= item.packer.first_name %></p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
    </div>
 <!-- items tab content^^^ above this div  -->

  </div>
<!-- tab content container^^^^^^^ -->

