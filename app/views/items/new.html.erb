
<div class="newitempage-container">
  <div class="newitem-form-container">
    <div class="newitem-form">


      <%= simple_form_for [@pack, @item] do |f|%>
      <div class="newitem-heading">
        <h4>Fill New Item Details</h4>
      </div>

        <%= f.input :name, label: 'Item Name' %>
        <%= f.input :category, label: 'Category', collection: %w(Top Bottom Blazer Miscellaneous Extras Outwerwear Hygiene) %>
        <%= f.input :style, label: 'Style', collection: %w(Jock Prepster Hipster Corporate Hip-Hop Outdoorsy Rockstar Vintage) %>
        <%= f.input :size, label: 'Size', collection: %w(XS S M L XL) %>
        <%= f.input :price, label: 'Price(Â¥)' %>
        <%= f.input :description, label: 'Item Description', wrapper_html: { class: 'new-item-description' } %>
        <%= f.input :photo, label: 'Item Photo' %>
        <%= f.input :photo_cache, as: :hidden %>
        <div class="create-item-btns">
          <div class="form-actions create-item-btn">
            <%= link_to "BACK", closet_profile_path(current_packer), {:class=>"btn btn-default"} %>
          </div>
          <div class="form-actions create-item-btn">
            <%= f.button :submit, "CREATE" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
