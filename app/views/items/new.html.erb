
<div class="newitempage-container">
  <div class="newitem-form-container">
    <div class="newitem-form">


      <%= simple_form_for [@pack, @item] do |f|%>
      <div class="newitem-heading">
        <h5>Fill New Item Details</h5>
      </div>

        <%= f.input :name, label: 'Name', wrapper_html: { class: 'small-font' } %>
        <%= f.input :category, label: 'Category', collection: %w(Top Bottom Blazer Miscellaneous Extras Outwerwear Hygiene),wrapper_html: { class: 'small-font' } %>
        <%= f.input :style, label: 'Style', collection: %w(Jock Prepster Hipster Corporate Hip-Hop Outdoorsy Rockstar Vintage),wrapper_html: { class: 'small-font' } %>
        <%= f.input :size, label: 'Size', collection: %w(XS S M L XL), wrapper_html: { class: 'small-font' } %>
        <%= f.input :price, label: 'Price (Â¥)',wrapper_html: { class: 'small-font' } %>
        <%= f.input :description, label: 'Description', wrapper_html: { class: 'new-item-description small-font' } %>
        <%= f.input :photo, label: 'Photo',wrapper_html: { class: 'small-font' } %>
        <%= f.input :photo_cache, as: :hidden %>
        <div class="create-item-btns">
          <div class="form-actions">
            <%= link_to "BACK", closet_profile_path(current_packer), {:class=>"btn find-btn"} %>
          </div>
          <div class="form-actions create-item-btn">
            <%= f.button :submit, "CREATE" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
