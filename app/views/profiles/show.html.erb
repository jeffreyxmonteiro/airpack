<div class="profile-show-banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/breakfast.jpg)">

  <div class="profile-show-banner-left-picture">
    <img class="profile-show-banner-avatar-square" alt="avatar-square" src=<%= @user.photo_url %> />
  </div>

  <div class="profile-show-banner-right-content">
    <h3><%= "#{@user.first_name} #{@user.last_name}"  %></h3>
    <p><%= @user.biography  %></p>
  </div>

</div>

<div class="profile-show-bottom">
  <div class="profile-show-bottom-left-profile-details-left">
    <div class="profile-show-bottom-headings-left"><h3>Profile Details</h3></div>

    <div class="profile-show-bottom-left-profile-details-card">
      <p><strong>Email: </strong><%= @user.email  %></p>
      <p><strong>First Name: </strong><%= @user.first_name  %></p>
      <p><strong>Last Name: </strong><%= @user.last_name  %></p>
      <p><strong>Profile Created: </strong><%= @user.created_at.strftime("%B %d, %Y")  %></p>

    </div>
  </div>

  <div class="profile-show-bottom-right-bookings">

    <div class="profile-show-bottom-headings-right"><h3>Upcoming / Completed Bookings</h3></div>
    <div class="profile-show-bottom-right-bookings-cards-container-spacer">
      <div class="profile-show-bottom-right-bookings-cards">
        <img src="https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/skateboard.jpg">
        <div class="profile-show-bottom-right-bookings-cards-infos">
          <h2>Product name</h2>
          <p>Product description with <strong>relevant info</strong> only.</p>
        </div>
      </div>
    </div>




  </div>
</div>

    <% user_items = @user.bookings.each do |booking| %>
      <% booking.booking_items.each do |item| %>
        <% if item.bookable.class == Pack %>
          <% item.bookable.name %>
          <% item.bookable.description %>
          <% item.bookable.photo_url %>
          <% item.bookable.description %>
          <% item.bookable.price %>
          <% item.bookable.style %>
          <% item.bookable.size %>
          <% booking.delivery_address  %>
        <% elsif item.bookable.class == Item  %>
          <% item.bookable.name %>
          <% item.bookable.description %>
          <% item.bookable.photo_url %>
          <% item.bookable.description %>
          <% item.bookable.price %>
          <% item.bookable.style %>
          <% item.bookable.size %>
        <% end %>
      <% end %>
    <% end %>

    <%= user_items.select {|item| item.completed == false } %>

